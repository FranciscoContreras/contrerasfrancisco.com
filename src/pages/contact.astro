---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import enhanceContactFormScript from '../scripts/enhanceContactForm.ts?url';
import loadCalEmbedScript from '../scripts/deferredCalEmbed.ts?url';
---

<Layout title="Contact - Francisco Contreras">
  <Navigation />
  <main id="main-content" class="min-h-screen transition-colors duration-300">
    <!-- Hero Section -->
    <section class="pt-40 pb-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-2xl md:text-3xl font-serif italic text-glass-gray-800 dark:text-dark-glass-gray-800 mb-6 leading-tight transition-colors duration-300">
          Let's build something remarkable together
        </h1>
        <p class="text-lg md:text-xl text-glass-gray-600 dark:text-dark-glass-gray-600 max-w-2xl mx-auto transition-colors duration-300">
          Ready to turn your product vision into measurable growth? I'm here to help you cut through the noise and focus on what actually drives results.
        </p>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
      <div class="max-w-4xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

          <!-- Contact Form -->
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-glass-gray-800 dark:text-dark-glass-gray-800 mb-6 transition-colors duration-300">Send a Message</h2>

            <form class="space-y-6" data-contact-form data-success-message="Thanks for reaching out—expect a reply within one business day." novalidate>
              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-glass-gray-700 dark:text-dark-glass-gray-700 mb-2 transition-colors duration-300">Name</label>
                <input type="text" id="name" name="name" required
                  class="w-full px-4 py-3 bg-glass-white/60 dark:bg-dark-glass-white/60 border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass text-glass-gray-800 dark:text-dark-glass-gray-800 placeholder-glass-gray-500 dark:placeholder-dark-glass-gray-500 focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 focus:border-glass-primary dark:focus:border-dark-glass-primary transition-all duration-300"
                  placeholder="Your full name">
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-glass-gray-700 dark:text-dark-glass-gray-700 mb-2 transition-colors duration-300">Email</label>
                <input type="email" id="email" name="email" required
                  class="w-full px-4 py-3 bg-glass-white/60 dark:bg-dark-glass-white/60 border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass text-glass-gray-800 dark:text-dark-glass-gray-800 placeholder-glass-gray-500 dark:placeholder-dark-glass-gray-500 focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 focus:border-glass-primary dark:focus:border-dark-glass-primary transition-all duration-300"
                  placeholder="your.email@company.com">
              </div>

              <!-- Company -->
              <div>
                <label for="company" class="block text-sm font-medium text-glass-gray-700 dark:text-dark-glass-gray-700 mb-2 transition-colors duration-300">Company</label>
                <input type="text" id="company" name="company"
                  class="w-full px-4 py-3 bg-glass-white/60 dark:bg-dark-glass-white/60 border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass text-glass-gray-800 dark:text-dark-glass-gray-800 placeholder-glass-gray-500 dark:placeholder-dark-glass-gray-500 focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 focus:border-glass-primary dark:focus:border-dark-glass-primary transition-all duration-300"
                  placeholder="Your company name">
              </div>

              <!-- Project Type -->
              <div>
                <label for="project-type" class="block text-sm font-medium text-glass-gray-700 dark:text-dark-glass-gray-700 mb-2 transition-colors duration-300">Project Type</label>
                <select id="project-type" name="project-type"
                  class="w-full px-4 py-3 bg-glass-white/60 dark:bg-dark-glass-white/60 border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass text-glass-gray-800 dark:text-dark-glass-gray-800 focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 focus:border-glass-primary dark:focus:border-dark-glass-primary transition-all duration-300">
                  <option value="">Select project type</option>
                  <option value="product-launch">Product Launch</option>
                  <option value="growth-strategy">Growth Strategy</option>
                  <option value="marketing-automation">Marketing Automation</option>
                  <option value="customer-experience">Customer Experience</option>
                  <option value="consulting">Strategic Consulting</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-glass-gray-700 dark:text-dark-glass-gray-700 mb-2 transition-colors duration-300">Message</label>
                <textarea id="message" name="message" rows="6" required
                  class="w-full px-4 py-3 bg-glass-white/60 dark:bg-dark-glass-white/60 border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass text-glass-gray-800 dark:text-dark-glass-gray-800 placeholder-glass-gray-500 dark:placeholder-dark-glass-gray-500 focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 focus:border-glass-primary dark:focus:border-dark-glass-primary transition-all duration-300 resize-none"
                  placeholder="Tell me about your project, goals, and how I can help..."></textarea>
              </div>

              <!-- Submit Button -->
              <button type="submit" data-contact-submit
                class="w-full bg-glass-primary dark:bg-dark-glass-primary text-glass-white dark:text-dark-glass-white px-6 py-3 rounded-glass text-sm font-semibold transition-all duration-300 shadow-soft hover:shadow-glass hover:scale-[1.01]">
                <span data-state="default">Send message</span>
                <span data-state="loading" class="hidden">Sending…</span>
              </button>
              <p class="text-xs text-glass-gray-500 dark:text-dark-glass-gray-500 mt-3">Prefer email? Reach me at
                <a href="mailto:contrerasfrancisco@icloud.com" class="font-medium text-glass-primary dark:text-dark-glass-primary hover:underline">contrerasfrancisco@icloud.com</a>.
              </p>
              <div data-contact-feedback class="hidden rounded-glass px-4 py-3 text-sm font-medium" role="status" aria-live="polite"></div>
            </form>
          </div>

          <!-- Information About Me -->
          <div>
            <h2 class="text-2xl md:text-3xl font-bold text-glass-gray-800 dark:text-dark-glass-gray-800 mb-6 transition-colors duration-300">About Working With Me</h2>

            <div class="space-y-6">
              <!-- What I Do -->
              <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass p-6 shadow-soft transition-all duration-300">
                <h3 class="text-lg font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800 mb-3 transition-colors duration-300">What I Do</h3>
                <p class="text-glass-gray-600 dark:text-dark-glass-gray-600 text-sm leading-relaxed transition-colors duration-300">
                  I help AI and automation companies cut through the noise and focus on growth tactics that actually move metrics. From product launches to customer acquisition, I build marketing systems that scale.
                </p>
              </div>

              <!-- How I Work -->
              <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass p-6 shadow-soft transition-all duration-300">
                <h3 class="text-lg font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800 mb-3 transition-colors duration-300">How I Work</h3>
                <ul class="text-glass-gray-600 dark:text-dark-glass-gray-600 text-sm space-y-2 transition-colors duration-300">
                  <li>• Quick 15-30 min discovery call to understand your goals</li>
                  <li>• Data-driven strategy with clear metrics and timelines</li>
                  <li>• Hands-on execution with weekly progress updates</li>
                  <li>• Flexible engagement from project-based to ongoing partnership</li>
                </ul>
              </div>

              <!-- Response Time -->
              <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass p-6 shadow-soft transition-all duration-300">
                <h3 class="text-lg font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800 mb-3 transition-colors duration-300">Response Time</h3>
                <p class="text-glass-gray-600 dark:text-dark-glass-gray-600 text-sm leading-relaxed transition-colors duration-300">
                  I typically respond to new inquiries within 24 hours. For urgent projects, feel free to mention it in your message and I'll prioritize accordingly.
                </p>
              </div>

              <!-- Contact Info -->
              <div class="pt-4 border-t border-glass-white/30 dark:border-dark-glass-white/30">
                <div class="space-y-3">
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-glass-primary dark:text-dark-glass-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <a href="mailto:contrerasfrancisco@icloud.com" class="text-sm text-glass-gray-700 dark:text-dark-glass-gray-700 hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors">
                      contrerasfrancisco@icloud.com
                    </a>
                  </div>
                  <div class="flex items-center space-x-3">
                    <svg class="w-5 h-5 text-glass-primary dark:text-dark-glass-primary" fill="currentColor" viewBox="0 0 24 24">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                    </svg>
                    <a href="https://www.linkedin.com/in/contreras-francisco/" target="_blank" class="text-sm text-glass-gray-700 dark:text-dark-glass-gray-700 hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors">
                      LinkedIn Profile
                    </a>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Calendar Section -->
    <section class="py-16 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl lg:text-5xl font-serif italic text-glass-primary dark:text-dark-glass-primary mb-4 transition-colors duration-300">
            Schedule a Call
          </h2>
          <p class="text-lg md:text-xl text-glass-gray-600 dark:text-dark-glass-gray-600 transition-colors duration-300">
            Prefer to talk directly? Book a time that works for you.
          </p>
        </div>

        <!-- Cal.com Embed -->
        <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass overflow-hidden shadow-soft hover:shadow-glass transition-all duration-300">
          <div
            class="relative h-[600px]"
            data-cal-embed
            data-cal-namespace="meet-contact"
            data-cal-target="cal-inline-contact"
            data-cal-link="francisco.contreras/meet"
            data-cal-layout="month_view"
          >
            <div style="width:100%;height:100%;overflow:scroll" id="cal-inline-contact"></div>
          </div>

          <style>
            [data-cal-embed] iframe {
              border-radius: 0 0 24px 24px;
            }

            [data-cal-embed] [class*='powered'],
            [data-cal-embed] [class*='branding'],
            [data-cal-embed] a[href*='cal.com'] {
              display: none !important;
              visibility: hidden !important;
              height: 0 !important;
              overflow: hidden !important;
            }
          </style>

          <!-- Contact Links at bottom of section -->
          <div class="p-6 border-t border-glass-white/30 dark:border-dark-glass-white/30 bg-glass-white/20 dark:bg-dark-glass-white/20">
            <div class="flex justify-center space-x-8">
              <a href="mailto:contrerasfrancisco@icloud.com" class="flex items-center space-x-2 text-glass-gray-600 dark:text-dark-glass-gray-600 hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <span class="text-sm font-medium">contrerasfrancisco@icloud.com</span>
              </a>

              <a href="https://www.linkedin.com/in/contreras-francisco/" target="_blank" class="flex items-center space-x-2 text-glass-gray-600 dark:text-dark-glass-gray-600 hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
                <span class="text-sm font-medium">LinkedIn</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>

<script type="module" src={enhanceContactFormScript}></script>

<script type="module" src={loadCalEmbedScript}></script>
