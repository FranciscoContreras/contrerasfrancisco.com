---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<Layout title="E-Commerce Automation Case Study - Francisco">
  <Navigation />

  <!-- Hero Section -->
  <section class="bg-glass-bg dark:bg-dark-glass-bg pt-32 pb-8 transition-colors duration-300">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Breadcrumb -->
      <nav class="mb-8">
        <div class="flex text-sm text-glass-gray-500 dark:text-dark-glass-gray-500">
          <a href="/" class="hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors">Home</a>
          <span class="mx-2">/</span>
          <a href="/#case-studies" class="hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors">Case Studies</a>
          <span class="mx-2">/</span>
          <span class="text-glass-gray-700 dark:text-dark-glass-gray-700">E-Commerce Automation</span>
        </div>
      </nav>

      <!-- Hero Content -->
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <div class="inline-flex items-center px-3 py-1 rounded-full bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary text-sm font-medium mb-6">
            <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
            Growth Campaign Case Study
          </div>

          <h1 class="text-3xl md:text-4xl lg:text-5xl font-serif italic font-bold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-4 leading-tight">
            E-Commerce
            <span class="text-glass-primary dark:text-dark-glass-primary">Automation</span>
          </h1>

          <p class="text-lg font-sans text-glass-gray-600 dark:text-dark-glass-gray-600 mb-6 leading-relaxed max-w-2xl">
            How we transformed declining conversion rates into sustained growth through intelligent automation and personalization, achieving 180% sales increase and 65% retention improvement.
          </p>

          <!-- Key Metrics Preview -->
          <div class="grid grid-cols-3 gap-3 mb-6">
            <div class="text-center p-3 bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20">
              <div class="text-xl font-sans font-bold text-glass-primary dark:text-dark-glass-primary">+180%</div>
              <div class="text-xs text-glass-gray-600 dark:text-dark-glass-gray-600">Sales Growth</div>
            </div>
            <div class="text-center p-3 bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20">
              <div class="text-xl font-sans font-bold text-glass-primary dark:text-dark-glass-primary">65%</div>
              <div class="text-xs text-glass-gray-600 dark:text-dark-glass-gray-600">Retention</div>
            </div>
            <div class="text-center p-3 bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20">
              <div class="text-xl font-sans font-bold text-glass-primary dark:text-dark-glass-primary">40%</div>
              <div class="text-xs text-glass-gray-600 dark:text-dark-glass-gray-600">CAC Reduction</div>
            </div>
          </div>

          <!-- CTA -->
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="#detailed-analysis" class="group relative bg-glass-primary dark:bg-dark-glass-primary text-glass-white dark:text-dark-glass-white px-6 py-3 rounded-glass text-sm font-medium transition-all duration-500 shadow-glass focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 overflow-hidden hover:shadow-xl hover:scale-105 hover:bg-white hover:text-glass-primary">
              <span class="relative z-10 transition-colors duration-500">View Full Analysis</span>
              <div class="absolute inset-0 bg-white opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            </a>
            <a href="#methodology" class="border border-glass-gray-300 dark:border-dark-glass-gray-300 text-glass-gray-700 dark:text-dark-glass-gray-700 px-6 py-3 rounded-glass text-sm font-medium hover:bg-glass-gray-50 dark:hover:bg-dark-glass-gray-50 transition-all duration-300 text-center">
              See Methodology
            </a>
          </div>
        </div>

        <!-- Hero Visual -->
        <div class="relative">
          <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass p-8 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
            <!-- Mock Dashboard -->
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <h3 class="font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800">Automation Dashboard</h3>
                <div class="flex space-x-2">
                  <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                  <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                  <div class="w-3 h-3 bg-green-400 rounded-full"></div>
                </div>
              </div>

              <!-- Mock Chart -->
              <div class="bg-glass-gray-50 dark:bg-dark-glass-gray-50 rounded-lg p-4 h-32 relative overflow-hidden">
                <svg class="w-full h-full" viewBox="0 0 300 100">
                  <polyline
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    class="text-glass-primary dark:text-dark-glass-primary"
                    points="10,80 50,70 90,60 130,45 170,35 210,25 250,18 290,12"
                  />
                  <circle cx="290" cy="12" r="3" fill="currentColor" class="text-glass-primary dark:text-dark-glass-primary"/>
                </svg>
                <div class="absolute top-2 left-2 text-xs text-glass-gray-500 dark:text-dark-glass-gray-500">Revenue Growth</div>
              </div>

              <!-- Mock Metrics -->
              <div class="grid grid-cols-2 gap-3">
                <div class="bg-glass-gray-100 dark:bg-dark-glass-gray-100 rounded p-2">
                  <div class="text-sm font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800">Email ROI</div>
                  <div class="text-lg font-bold text-glass-primary dark:text-dark-glass-primary">47:1</div>
                </div>
                <div class="bg-glass-gray-100 dark:bg-dark-glass-gray-100 rounded p-2">
                  <div class="text-sm font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800">Automation</div>
                  <div class="text-lg font-bold text-glass-primary dark:text-dark-glass-primary">12 flows</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- The Challenge -->
  <section class="bg-glass-bg dark:bg-dark-glass-bg pt-4 pb-16 transition-colors duration-300">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass p-8 md:p-12 shadow-soft hover:shadow-glass border border-glass-white/20 dark:border-dark-glass-white/20 transition-all duration-300">
          <h2 class="text-2xl md:text-3xl font-serif italic font-bold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-8 leading-tight text-center">
            The Challenge
          </h2>
          <p class="text-base md:text-lg text-glass-gray-600 dark:text-dark-glass-gray-600 mb-6 text-center max-w-3xl mx-auto">
            A growing e-commerce retailer was experiencing declining conversion rates despite increasing traffic. Customer acquisition costs were rising while lifetime value remained stagnant, creating an unsustainable growth trajectory.
          </p>

          <!-- Challenge Metrics -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
            <div class="bg-red-50 dark:bg-red-900/20 rounded-glass-sm p-4 border border-red-200/20 dark:border-red-800/20">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Declining Performance</h4>
              <ul class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600 space-y-1">
                <li>• 23% drop in conversion rates over 6 months</li>
                <li>• 45% increase in customer acquisition costs</li>
                <li>• 30% decline in repeat purchase rate</li>
              </ul>
            </div>
            <div class="bg-orange-50 dark:bg-orange-900/20 rounded-glass-sm p-4 border border-orange-200/20 dark:border-orange-800/20">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Root Causes</h4>
              <ul class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600 space-y-1">
                <li>• Generic, one-size-fits-all messaging</li>
                <li>• Poor post-purchase experience</li>
                <li>• Lack of behavioral targeting</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Strategic Approach -->
  <section class="bg-glass-bg dark:bg-dark-glass-bg pb-16 transition-colors duration-300">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl md:text-3xl font-serif italic font-bold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-8 leading-tight text-center">
          Strategic Approach
        </h2>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
          <div class="text-center">
            <div class="w-12 h-12 bg-glass-primary/10 dark:bg-dark-glass-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-6 h-6 text-glass-primary dark:text-dark-glass-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
            </div>
            <h3 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-3">Data Analysis</h3>
            <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">Deep dive into customer behavior patterns and sales funnel analytics</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-glass-primary/10 dark:bg-dark-glass-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-6 h-6 text-glass-primary dark:text-dark-glass-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
              </svg>
            </div>
            <h3 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-3">Personalization</h3>
            <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">Implement behavioral targeting and individualized customer experiences</p>
          </div>

          <div class="text-center">
            <div class="w-12 h-12 bg-glass-primary/10 dark:bg-dark-glass-primary/10 rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-6 h-6 text-glass-primary dark:text-dark-glass-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <h3 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-3">Automation</h3>
            <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">Build scalable systems for consistent customer engagement</p>
          </div>
        </div>

        <!-- Implementation Timeline -->
        <h3 class="text-xl font-serif italic font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-8 text-center">Implementation Timeline</h3>

        <div class="relative">
          <!-- Timeline Line -->
          <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-glass-gray-300 dark:bg-dark-glass-gray-300"></div>

          <!-- Timeline Items -->
          <div class="space-y-8">
            <!-- Phase 1 -->
            <div class="relative flex items-start space-x-4">
              <div class="w-8 h-8 bg-glass-primary dark:bg-dark-glass-primary rounded-full flex items-center justify-center text-white dark:text-black text-sm font-bold relative z-10">1</div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3 mb-2">
                  <h4 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900">Data Analysis & Segmentation</h4>
                  <span class="text-sm text-glass-gray-500 dark:text-dark-glass-gray-500">Weeks 1-2</span>
                </div>
                <p class="text-glass-gray-600 dark:text-dark-glass-gray-600 mb-3">Comprehensive analysis of customer behavior data to identify drop-off points and segment opportunities.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Behavior Analytics</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Customer Segmentation</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Funnel Analysis</span>
                </div>
              </div>
            </div>

            <!-- Phase 2 -->
            <div class="relative flex items-start space-x-4">
              <div class="w-8 h-8 bg-glass-primary dark:bg-dark-glass-primary rounded-full flex items-center justify-center text-white dark:text-black text-sm font-bold relative z-10">2</div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3 mb-2">
                  <h4 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900">Automation Design</h4>
                  <span class="text-sm text-glass-gray-500 dark:text-dark-glass-gray-500">Weeks 3-4</span>
                </div>
                <p class="text-glass-gray-600 dark:text-dark-glass-gray-600 mb-3">Development of 12 automated email sequences targeting different customer segments and behaviors.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Email Sequences</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Workflow Design</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Trigger Setup</span>
                </div>
              </div>
            </div>

            <!-- Phase 3 -->
            <div class="relative flex items-start space-x-4">
              <div class="w-8 h-8 bg-glass-primary dark:bg-dark-glass-primary rounded-full flex items-center justify-center text-white dark:text-black text-sm font-bold relative z-10">3</div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3 mb-2">
                  <h4 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900">Testing & Optimization</h4>
                  <span class="text-sm text-glass-gray-500 dark:text-dark-glass-gray-500">Weeks 5-8</span>
                </div>
                <p class="text-glass-gray-600 dark:text-dark-glass-gray-600 mb-3">A/B testing across all messaging touchpoints and continuous optimization based on performance data.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">A/B Testing</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Performance Optimization</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Conversion Tracking</span>
                </div>
              </div>
            </div>

            <!-- Phase 4 -->
            <div class="relative flex items-start space-x-4">
              <div class="w-8 h-8 bg-glass-primary dark:bg-dark-glass-primary rounded-full flex items-center justify-center text-white dark:text-black text-sm font-bold relative z-10">4</div>
              <div class="flex-1 min-w-0">
                <div class="flex items-center space-x-3 mb-2">
                  <h4 class="text-lg font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900">Personalization Engine</h4>
                  <span class="text-sm text-glass-gray-500 dark:text-dark-glass-gray-500">Weeks 9-12</span>
                </div>
                <p class="text-glass-gray-600 dark:text-dark-glass-gray-600 mb-3">Implementation of AI-powered product recommendation system and dynamic content personalization.</p>
                <div class="flex flex-wrap gap-2">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Recommendation Engine</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Dynamic Content</span>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-glass-primary/10 dark:bg-dark-glass-primary/10 text-glass-primary dark:text-dark-glass-primary">Lifecycle Campaigns</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Execution Details -->
  <section class="bg-glass-bg dark:bg-dark-glass-bg pb-16 transition-colors duration-300">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <h2 class="text-2xl md:text-3xl font-serif italic font-bold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-8 leading-tight text-center">
          Execution Framework
        </h2>

        <!-- Customer Journey Automation -->
        <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass p-8 md:p-12 shadow-soft hover:shadow-glass border border-glass-white/20 dark:border-dark-glass-white/20 transition-all duration-300 mb-12">
          <h3 class="text-xl font-serif italic font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-8 text-center">12 Automated Email Sequences</h3>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <div class="text-center p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Welcome Series</h4>
              <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">3-email onboarding sequence</p>
            </div>
            <div class="text-center p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Abandoned Cart</h4>
              <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">4-email recovery campaign</p>
            </div>
            <div class="text-center p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Post-Purchase</h4>
              <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">5-email nurture sequence</p>
            </div>
            <div class="text-center p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Win-Back</h4>
              <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">3-email reactivation series</p>
            </div>
            <div class="text-center p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">VIP Customer</h4>
              <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">Ongoing loyalty program</p>
            </div>
            <div class="text-center p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20 shadow-soft hover:shadow-glass transition-all duration-300">
              <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-2">Browse Abandonment</h4>
              <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">2-email engagement series</p>
            </div>
          </div>
        </div>

        <!-- Performance Testing Matrix -->
        <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-lg rounded-glass p-8 md:p-12 shadow-soft hover:shadow-glass border border-glass-white/20 dark:border-dark-glass-white/20 transition-all duration-300 mb-12">
          <h3 class="text-xl font-serif italic font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900 mb-8 text-center">A/B Testing Results</h3>

          <div class="space-y-6">
            <div class="flex items-center justify-between p-4 rounded-glass-sm bg-glass-gray-50 dark:bg-dark-glass-gray-50 border border-glass-gray-200/20 dark:border-dark-glass-gray-200/20">
              <div>
                <h4 class="font-sans font-semibold text-glass-gray-900 dark:text-dark-glass-gray-900">Subject Line Optimization</h4>
                <p class="text-sm text-glass-gray-600 dark:text-dark-glass-gray-600">Personalized vs. Generic</p>
              </div>
              <div class="text-right">
                <div class="text-lg font-sans font-bold text-glass-primary dark:text-dark-glass-primary">+42%</div>
                <div class="text-xs text-glass-gray-500 dark:text-dark-glass-gray-500">Open Rate</div>
              </div>
            </div>

