---
import Layout from '../layouts/Layout.astro';
import PersonalHero from '../components/PersonalHero.astro';
import CompanyCarousel from '../components/CompanyCarousel.astro';
import HighlightsSection from '../components/HighlightsSection.astro';
import CaseStudies from '../components/CaseStudies.astro';
import Technologies from '../components/Technologies.astro';
import FAQ from '../components/FAQ.astro';
import ContactForm from '../components/ContactForm.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Francisco - Product Marketing Manager">
  <Navigation />
  <main id="main-content" class="min-h-screen transition-colors duration-300">
    <PersonalHero />
    <CompanyCarousel />
    <HighlightsSection />
    <CaseStudies />
    <Technologies />
    <FAQ />
    <ContactForm variant="cal-only" />
  </main>
  <Footer />
</Layout>
