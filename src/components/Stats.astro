---
// Performance metrics and key achievements with dashboard-style cards
---

<section class="py-20 px-4 sm:px-6 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-glass-dark mb-6">Performance Dashboard</h2>
      <p class="text-xl text-glass-dark/70 max-w-3xl mx-auto">
        Real-time metrics showcasing the impact of strategic marketing initiatives
      </p>
    </div>
    
    <!-- Main Dashboard Grid -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
      <!-- Large Performance Chart Card -->
      <div class="lg:col-span-2 bg-white/70 backdrop-blur-sm border border-glass-dark/10 rounded-3xl p-8 shadow-soft hover:shadow-glass transition-all duration-300">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-semibold text-glass-dark">Campaign Performance</h3>
          <div class="flex items-center space-x-2">
            <div class="w-3 h-3 bg-blue-500 rounded-full"></div>
            <span class="text-sm text-glass-dark/70">Live</span>
          </div>
        </div>
        
        <!-- Mock Performance Chart -->
        <div class="h-48 bg-gradient-to-br from-blue-50/50 to-purple-50/50 rounded-2xl p-6 flex items-end justify-between">
          <div class="flex flex-col items-center space-y-2">
            <div class="w-8 bg-blue-500 rounded-t-lg h-16"></div>
            <span class="text-xs text-glass-dark/60">Jan</span>
          </div>
          <div class="flex flex-col items-center space-y-2">
            <div class="w-8 bg-blue-500 rounded-t-lg h-20"></div>
            <span class="text-xs text-glass-dark/60">Feb</span>
          </div>
          <div class="flex flex-col items-center space-y-2">
            <div class="w-8 bg-blue-500 rounded-t-lg h-24"></div>
            <span class="text-xs text-glass-dark/60">Mar</span>
          </div>
          <div class="flex flex-col items-center space-y-2">
            <div class="w-8 bg-blue-500 rounded-t-lg h-28"></div>
            <span class="text-xs text-glass-dark/60">Apr</span>
          </div>
          <div class="flex flex-col items-center space-y-2">
            <div class="w-8 bg-blue-500 rounded-t-lg h-32"></div>
            <span class="text-xs text-glass-dark/60">May</span>
          </div>
          <div class="flex flex-col items-center space-y-2">
            <div class="w-8 bg-blue-500 rounded-t-lg h-36"></div>
            <span class="text-xs text-glass-dark/60">Jun</span>
          </div>
        </div>
        
        <div class="mt-6 grid grid-cols-3 gap-4">
          <div class="text-center">
            <div class="text-2xl font-bold text-glass-dark">+24%</div>
            <div class="text-sm text-glass-dark/60">vs last month</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-glass-dark">87.2k</div>
            <div class="text-sm text-glass-dark/60">Total leads</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-glass-dark">26.3%</div>
            <div class="text-sm text-glass-dark/60">Conversion</div>
          </div>
        </div>
      </div>
      
      <!-- Conversion Metrics Card -->
      <div class="bg-white/70 backdrop-blur-sm border border-glass-dark/10 rounded-3xl p-8 shadow-soft hover:shadow-glass transition-all duration-300">
        <h3 class="text-xl font-semibold text-glass-dark mb-6">Conversion Overview</h3>
        
        <!-- Circular Progress Chart -->
        <div class="relative w-32 h-32 mx-auto mb-6">
          <svg class="w-32 h-32 transform -rotate-90" viewBox="0 0 100 100">
            <circle cx="50" cy="50" r="40" stroke="#E5E7EB" stroke-width="8" fill="none"/>
            <circle cx="50" cy="50" r="40" stroke="#3B82F6" stroke-width="8" fill="none" 
                    stroke-dasharray="251.2" stroke-dashoffset="62.8" stroke-linecap="round"/>
          </svg>
          <div class="absolute inset-0 flex items-center justify-center">
            <div class="text-center">
              <div class="text-2xl font-bold text-glass-dark">75%</div>
              <div class="text-xs text-glass-dark/60">Complete</div>
            </div>
          </div>
        </div>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between">
            <span class="text-sm text-glass-dark/70">Lead Quality</span>
            <span class="text-sm font-semibold text-glass-dark">85%</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-glass-dark/70">Engagement</span>
            <span class="text-sm font-semibold text-glass-dark">92%</span>
          </div>
          <div class="flex items-center justify-between">
            <span class="text-sm text-glass-dark/70">Retention</span>
            <span class="text-sm font-semibold text-glass-dark">78%</span>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Key Metrics Row -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      <div class="bg-white/70 backdrop-blur-sm border border-glass-dark/10 rounded-2xl p-6 text-center shadow-soft hover:shadow-glass transition-all duration-300">
        <div class="text-3xl font-bold text-glass-dark mb-2">150%</div>
        <div class="text-sm text-glass-dark/70 font-medium">ROI Increase</div>
        <div class="text-xs text-green-600 mt-1">+12% this month</div>
      </div>
      
      <div class="bg-white/70 backdrop-blur-sm border border-glass-dark/10 rounded-2xl p-6 text-center shadow-soft hover:shadow-glass transition-all duration-300">
        <div class="text-3xl font-bold text-glass-dark mb-2">$2.5M</div>
        <div class="text-sm text-glass-dark/70 font-medium">Revenue</div>
        <div class="text-xs text-green-600 mt-1">+18% this quarter</div>
      </div>
      
      <div class="bg-white/70 backdrop-blur-sm border border-glass-dark/10 rounded-2xl p-6 text-center shadow-soft hover:shadow-glass transition-all duration-300">
        <div class="text-3xl font-bold text-glass-dark mb-2">85%</div>
        <div class="text-sm text-glass-dark/70 font-medium">Conversion</div>
        <div class="text-xs text-green-600 mt-1">+5% this month</div>
      </div>
      
      <div class="bg-white/70 backdrop-blur-sm border border-glass-dark/10 rounded-2xl p-6 text-center shadow-soft hover:shadow-glass transition-all duration-300">
        <div class="text-3xl font-bold text-glass-dark mb-2">12</div>
        <div class="text-sm text-glass-dark/70 font-medium">Launches</div>
        <div class="text-xs text-blue-600 mt-1">3 this quarter</div>
      </div>
    </div>
  </div>
</section>
