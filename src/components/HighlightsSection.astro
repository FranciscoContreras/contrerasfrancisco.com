        </div>
      </div>
      
      <!-- Right: Terminal Interface -->
      <div>
        <div class="bg-glass-gray-100 dark:bg-dark-glass-gray-800 rounded-glass p-6 shadow-glass-lg transition-colors duration-300">
          <!-- Terminal Header with Mac-style icons -->
          <div class="flex items-center space-x-2 mb-6">
            <div class="w-3 h-3 bg-red-400 rounded-full"></div>
            <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
            <div class="w-3 h-3 bg-green-400 rounded-full"></div>
          </div>

          <!-- App Icons Row -->
          <div class="flex justify-center space-x-4 mb-8">
            <!-- OpenAI Logo -->
            <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-soft">
              <img src="/tools-icons/OpenAi.svg" alt="OpenAI" class="w-8 h-8" />
            </div>
            <!-- Claude Logo -->
            <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-soft">
              <img src="/tools-icons/claude.svg" alt="Claude" class="w-8 h-8" />
            </div>
            <!-- Astro Logo -->
            <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-soft">
              <img src="/tools-icons/Astro.svg" alt="Astro" class="w-6 h-6" />
            </div>
            <!-- Next.js Logo -->
            <div class="w-12 h-12 bg-white rounded-xl flex items-center justify-center shadow-soft">
              <img src="/tools-icons/Next.js.svg" alt="Next.js" class="w-8 h-8" />
            </div>
          </div>

          <!-- Terminal Content -->
          <div class="font-mono text-sm text-glass-gray-800 dark:text-dark-glass-gray-200 space-y-1 transition-colors duration-300">
            <div>&gt; launching francisco.exe v2...</div>
            <div>&gt; loading growth_os, lifecycle_ai, revenue_ops...</div>
            <div>&gt; boot sequence complete.</div>
            <div class="pt-4"></div>

            <div>[ francisco contreras ]</div>
            <div>alias: "Franc"</div>
            <div>base: working globally</div>
            <div>mission: make products impossible to ignore</div>
            <div>experience: 5+ yrs | AI, Lifecycle, RevOps | Specialist → PMM in 8 months</div>
            <div class="pt-2"></div>

            <div>projects_loaded: [ AI Platform Launch, E-commerce Automation, SaaS Growth, Journey Optimization ]</div>
            <div>toolchain: growth = [ HubSpot, Salesforce, Braze ]; data = [ Mixpanel, PostHog, dbt ]; automation = [ Zapier, Make, Retool ]; builders = [ Webflow, Next.js, Astro ]; ai = [ GPT-4o, Claude, Perplexity ]</div>
            <div>strengths: narrative architecture • experiment design • lifecycle systems • cross-functional orchestration</div>
            <div>next_objective: Drive breakout growth for AI + automation products with obsessive customer insight</div>
            <div class="pt-6"></div>

            <div>&gt; type "start" to chat over coffee ☕</div>
            <div class="pt-4"></div>

            <!-- Interactive input -->
            <form id="terminal-input-form" class="flex items-center border border-glass-gray-300 dark:border-dark-glass-gray-600 rounded-lg px-3 py-2 bg-white dark:bg-dark-glass-gray-700">
              <span class="text-glass-gray-400 dark:text-dark-glass-gray-400 mr-3">&gt;</span>
              <input
                id="terminal-input"
                type="text"
                inputmode="text"
                autocomplete="off"
                placeholder="type start"
                class="w-full bg-transparent text-glass-gray-700 dark:text-dark-glass-gray-100 placeholder-glass-gray-300 dark:placeholder-dark-glass-gray-400 focus:outline-none"
                aria-label="Type start to book a coffee chat"
              />
            </form>
            <div id="terminal-feedback" class="text-xs text-glass-primary dark:text-dark-glass-primary h-4"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('terminal-input-form');
    const input = document.getElementById('terminal-input');
    const feedback = document.getElementById('terminal-feedback');
    let gameScriptLoaded = false;

    if (!form || !input) return;

    const handleStart = () => {
      const target = document.querySelector('#contact') || document.querySelector('footer');
      if (target) {
        target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      } else {
        window.location.href = '/contact';
      }
    };

    form.addEventListener('submit', (event) => {
      event.preventDefault();
      const value = input.value.trim().toLowerCase();
      if (!value) {
        if (feedback) feedback.textContent = '';
        return;
      }

      if (value === 'start') {
        if (feedback) {
          feedback.textContent = 'launching coffee chat...';
          setTimeout(() => (feedback.textContent = ''), 2500);
        }
        handleStart();
      } else if (value === 'game' || value === 'gallaga') {
        if (feedback) {
          feedback.textContent = 'loading galaga.mini...';
        }

        const launchGame = () => {
          if (feedback) {
            feedback.textContent = '';
          }
          if (window.launchMiniGalaga) {
            window.launchMiniGalaga();
          }
        };

        if (gameScriptLoaded) {
          launchGame();
        } else {
          const script = document.createElement('script');
          script.src = '/scripts/galaga-mini.js';
          script.async = true;
          script.onload = () => {
            gameScriptLoaded = true;
            launchGame();
          };
          script.onerror = () => {
            if (feedback) {
              feedback.textContent = 'could not load mini-game. try again later.';
              setTimeout(() => (feedback.textContent = ''), 2500);
            }
          };
          document.body.appendChild(script);
        }
      } else if (value === 'veronica') {
        alert('Go shower stinky');
        if (feedback) {
          feedback.textContent = 'pushing to git...';
        }
        // Just show the message, no actual git push from browser
        setTimeout(() => {
          if (feedback) {
            feedback.textContent = 'git push complete 😏';
          }
          setTimeout(() => (feedback.textContent = ''), 2500);
        }, 1000);
      } else if (feedback) {
        feedback.textContent = "command not recognized. try 'start' or 'game'.";
        setTimeout(() => (feedback.textContent = ''), 2500);
      }

      input.value = '';
    });
  });
</script>
