                Cal.ns.meet("inline", {
                  elementOrSelector:"#my-cal-inline-meet",
                  config: {"layout":"month_view","theme":"auto"},
                  calLink: "francisco.contreras/meet",
                });

                Cal.ns.meet("ui", {"hideEventTypeDetails":false,"layout":"month_view"});
              </script>
              <!-- Cal inline embed code ends -->
            </div>
          </div>

          <style>
            #my-cal-inline-meet iframe,
            #my-cal-inline-meet-home iframe {
              border-radius: 0 0 24px 24px;
            }

            #my-cal-inline-meet [class*='powered'],
            #my-cal-inline-meet [class*='branding'],
            #my-cal-inline-meet a[href*='cal.com'],
            #my-cal-inline-meet-home [class*='powered'],
            #my-cal-inline-meet-home [class*='branding'],
            #my-cal-inline-meet-home a[href*='cal.com'] {
              display: none !important;
              visibility: hidden !important;
              height: 0 !important;
              overflow: hidden !important;
            }
          </style>

          <div class="flex flex-wrap items-center gap-4 border-t border-glass-white/40 dark:border-dark-glass-white/30 bg-glass-white/30 dark:bg-dark-glass-white/10 px-8 py-6">
            <a
              href="mailto:contrerasfrancisco@icloud.com"
              class="flex items-center gap-2 text-glass-gray-600 dark:text-dark-glass-gray-600 hover:text-glass-primary dark:hover:text-dark-glass-primary transition-colors"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
