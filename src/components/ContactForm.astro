---
interface Props {
  variant?: 'full' | 'cal-only';
}

const { variant = 'full' } = Astro.props as Props;
const showForm = variant !== 'cal-only';

---

<section id="contact" class="py-20 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-sans font-semibold tracking-tight text-glass-gray-800 dark:text-dark-glass-gray-800 transition-colors duration-300 leading-tight">
        Your product deserves traction.
      </h2>
      <p class="text-lg md:text-xl font-serif italic text-glass-gray-600 dark:text-dark-glass-gray-600 mt-1 transition-colors duration-300">
        Let's make it happen.
      </p>
    </div>

    {showForm ? (
      <div class="grid gap-8 lg:grid-cols-[1.05fr,0.95fr] items-start">
        <div class="bg-glass-white/70 dark:bg-dark-glass-white/60 backdrop-blur-xl border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass shadow-soft hover:shadow-glass transition-all duration-300">
          <div class="p-8 md:p-10 space-y-8">
            <div class="space-y-2">
              <h3 class="text-2xl font-semibold text-glass-gray-800 dark:text-dark-glass-gray-800">Send a note</h3>
              <p class="text-base text-glass-gray-600 dark:text-dark-glass-gray-600">
                Share what you are building, what success looks like, and how I can help accelerate the next milestone.
              </p>
            </div>

            <form id="portfolio-contact-form" class="space-y-6" data-contact-form novalidate>
              <div class="grid gap-4 sm:grid-cols-2">
                <label class="flex flex-col">
                  <span class="text-sm font-medium text-glass-gray-600 dark:text-dark-glass-gray-600 mb-2">Name*</span>
                  <input
                    name="name"
                    type="text"
                    required
                    autocomplete="name"
                    placeholder="How should I address you?"
                    class="rounded-2xl border border-transparent bg-white/80 dark:bg-black/20 focus:border-glass-primary focus:ring-2 focus:ring-glass-primary/20 dark:focus:border-dark-glass-primary dark:focus:ring-dark-glass-primary/30 px-4 py-3 text-base text-glass-gray-800 dark:text-dark-glass-gray-100 transition-all duration-300 shadow-inner"
                  />
                </label>
                <label class="flex flex-col">
                  <span class="text-sm font-medium text-glass-gray-600 dark:text-dark-glass-gray-600 mb-2">Email*</span>
                  <input
                    name="email"
                    type="email"
                    required
                    autocomplete="email"
                    placeholder="Where can I reply?"
                    class="rounded-2xl border border-transparent bg-white/80 dark:bg-black/20 focus:border-glass-primary focus:ring-2 focus:ring-glass-primary/20 dark:focus:border-dark-glass-primary dark:focus:ring-dark-glass-primary/30 px-4 py-3 text-base text-glass-gray-800 dark:text-dark-glass-gray-100 transition-all duration-300 shadow-inner"
                  />
                </label>
                <label class="flex flex-col sm:col-span-2">
                  <span class="text-sm font-medium text-glass-gray-600 dark:text-dark-glass-gray-600 mb-2">Company</span>
                  <input
                    name="company"
                    type="text"
                    autocomplete="organization"
                    placeholder="Who are you building for?"
                    class="rounded-2xl border border-transparent bg-white/80 dark:bg-black/20 focus:border-glass-primary focus:ring-2 focus:ring-glass-primary/20 dark:focus:border-dark-glass-primary dark:focus:ring-dark-glass-primary/30 px-4 py-3 text-base text-glass-gray-800 dark:text-dark-glass-gray-100 transition-all duration-300 shadow-inner"
                  />
                </label>
              </div>

              <div class="grid gap-4 sm:grid-cols-2">
                <label class="flex flex-col">
                  <span class="text-sm font-medium text-glass-gray-600 dark:text-dark-glass-gray-600 mb-2">Ideal timeline</span>
                  <select
                    name="timeline"
                    class="rounded-2xl border border-transparent bg-white/80 dark:bg-black/20 focus:border-glass-primary focus:ring-2 focus:ring-glass-primary/20 dark:focus:border-dark-glass-primary dark:focus:ring-dark-glass-primary/30 px-4 py-3 text-base text-glass-gray-800 dark:text-dark-glass-gray-100 transition-all duration-300 shadow-inner"
                  >
                    <option value="">Select a window</option>
                    <option>ASAP (next 2 weeks)</option>
                    <option>Within a month</option>
                    <option>1-3 months from now</option>
                    <option>Exploring options</option>
                  </select>
                </label>
                <label class="flex flex-col">
                  <span class="text-sm font-medium text-glass-gray-600 dark:text-dark-glass-gray-600 mb-2">Scope / budget</span>
                  <select
                    name="budget"
                    class="rounded-2xl border border-transparent bg-white/80 dark:bg-black/20 focus:border-glass-primary focus:ring-2 focus:ring-glass-primary/20 dark:focus:border-dark-glass-primary dark:focus:ring-dark-glass-primary/30 px-4 py-3 text-base text-glass-gray-800 dark:text-dark-glass-gray-100 transition-all duration-300 shadow-inner"
                  >
                    <option value="">Still figuring it out</option>
                    <option>Advisory / fractional</option>
                    <option>Project (under $10k)</option>
                    <option>Project ($10k-$25k)</option>
                    <option>Project ($25k+)</option>
                  </select>
                </label>
              </div>

              <label class="flex flex-col">
                <span class="text-sm font-medium text-glass-gray-600 dark:text-dark-glass-gray-600 mb-2">What should I know?*</span>
                <textarea
                  name="message"
                  required
                  rows="5"
                  placeholder="Share context, goals, and any links I should review before we connect."
                  class="rounded-3xl border border-transparent bg-white/80 dark:bg-black/20 focus:border-glass-primary focus:ring-2 focus:ring-glass-primary/20 dark:focus:border-dark-glass-primary dark:focus:ring-dark-glass-primary/30 px-4 py-3 text-base text-glass-gray-800 dark:text-dark-glass-gray-100 transition-all duration-300 shadow-inner resize-none"
                ></textarea>
              </label>

              <div class="space-y-3">
                <button
                  type="submit"
                  data-contact-submit
                  class="group relative w-full overflow-hidden rounded-2xl bg-glass-primary dark:bg-dark-glass-primary text-glass-white dark:text-dark-glass-white px-6 py-3 text-base font-semibold transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-glass-primary/20 dark:focus:ring-dark-glass-primary/20 hover:shadow-xl hover:scale-[1.01]"
                >
                  <span data-state="default">Send message</span>
                  <span data-state="loading" class="hidden">Sendingâ€¦</span>
                </button>
                <p class="text-xs text-glass-gray-500 dark:text-dark-glass-gray-500">
                  Prefer email? Reach me directly at
                  <a href="mailto:contrerasfrancisco@icloud.com" class="font-medium text-glass-primary dark:text-dark-glass-primary hover:underline">
                    contrerasfrancisco@icloud.com
                  </a>.
                </p>
                <div
                  id="contact-feedback"
                  data-contact-feedback
                  class="hidden rounded-2xl px-4 py-3 text-sm font-medium"
                  role="status"
                  aria-live="polite"
                ></div>
              </div>
            </form>
          </div>
        </div>

        <div class="bg-glass-white/60 dark:bg-dark-glass-white/60 backdrop-blur-xl border border-glass-white/40 dark:border-dark-glass-white/40 rounded-glass shadow-soft hover:shadow-glass transition-all duration-300">
