---
// Contact form with liquid glass aesthetic
---

<section id="contact" class="py-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-br from-glass-gray-50 to-glass-white">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-2xl md:text-3xl font-bold text-glass-gray-800 text-center mb-12">Let's Work Together</h2>
    
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Contact Form -->
      <div class="bg-glass-white/60 backdrop-blur-lg border border-glass-white/40 rounded-glass p-6 shadow-soft hover:shadow-glass transition-all duration-300">
        <h3 class="text-lg font-bold text-glass-gray-800 mb-4">Send me a message</h3>
        
        <form class="space-y-4">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="firstName" class="block text-xs font-medium text-glass-gray-800 mb-2">First Name</label>
              <input type="text" id="firstName" name="firstName" required 
                     class="w-full px-3 py-2 border border-glass-white/40 rounded-glass-sm focus:ring-2 focus:ring-glass-primary/20 focus:border-transparent transition-all duration-200 bg-glass-white/40 backdrop-blur-sm">
            </div>
            <div>
              <label for="lastName" class="block text-xs font-medium text-glass-gray-800 mb-2">Last Name</label>
              <input type="text" id="lastName" name="lastName" required 
                     class="w-full px-3 py-2 border border-glass-white/40 rounded-glass-sm focus:ring-2 focus:ring-glass-primary/20 focus:border-transparent transition-all duration-200 bg-glass-white/40 backdrop-blur-sm">
            </div>
          </div>
          
          <div>
            <label for="email" class="block text-xs font-medium text-glass-gray-800 mb-2">Email</label>
            <input type="email" id="email" name="email" required 
                   class="w-full px-3 py-2 border border-glass-white/40 rounded-glass-sm focus:ring-2 focus:ring-glass-primary/20 focus:border-transparent transition-all duration-200 bg-glass-white/40 backdrop-blur-sm">
          </div>
          
          <div>
            <label for="company" class="block text-xs font-medium text-glass-gray-800 mb-2">Company</label>
            <input type="text" id="company" name="company" 
                   class="w-full px-3 py-2 border border-glass-white/40 rounded-glass-sm focus:ring-2 focus:ring-glass-primary/20 focus:border-transparent transition-all duration-200 bg-glass-white/40 backdrop-blur-sm">
          </div>
          
          <div>
            <label for="projectType" class="block text-xs font-medium text-glass-gray-800 mb-2">Project Type</label>
            <select id="projectType" name="projectType" 
                    class="w-full px-3 py-2 border border-glass-white/40 rounded-glass-sm focus:ring-2 focus:ring-glass-primary/20 focus:border-transparent transition-all duration-200 bg-glass-white/40 backdrop-blur-sm">
              <option value="">Select a project type</option>
              <option value="product-launch">Product Launch</option>
              <option value="growth-campaign">Growth Campaign</option>
              <option value="automation">Marketing Automation</option>
              <option value="customer-experience">Customer Experience</option>
              <option value="consulting">General Consulting</option>
            </select>
          </div>
          
          <div>
            <label for="message" class="block text-xs font-medium text-glass-gray-800 mb-2">Message</label>
            <textarea id="message" name="message" rows="4" required 
                      class="w-full px-3 py-2 border border-glass-white/40 rounded-glass-sm focus:ring-2 focus:ring-glass-primary/20 focus:border-transparent transition-all duration-200 bg-glass-white/40 backdrop-blur-sm resize-none"></textarea>
          </div>
          
          <button type="submit" 
                  class="w-full bg-glass-primary text-glass-white py-3 rounded-glass-sm text-sm font-semibold hover:bg-glass-primary-dark transition-all duration-300 shadow-soft hover:shadow-glass">
            Send Message
          </button>
        </form>
      </div>
      
      <!-- Calendar Booking -->
      <div class="bg-glass-white/60 backdrop-blur-lg border border-glass-white/40 rounded-glass p-6 shadow-soft hover:shadow-glass transition-all duration-300">
        <h3 class="text-lg font-bold text-glass-gray-800 mb-4">Book a Meeting</h3>
        
        <div class="space-y-4">
          <p class="text-sm text-glass-gray-600 leading-relaxed">
            Ready to discuss your project? Book a free 30-minute consultation to explore how we can work together to achieve your marketing goals.
          </p>
          
          <!-- Calendar Integration Placeholder -->
          <div class="bg-glass-white/40 backdrop-blur-sm border border-glass-white/30 rounded-glass p-6 text-center">
            <div class="w-12 h-12 bg-glass-primary rounded-glass-sm mx-auto mb-3 flex items-center justify-center">
              <svg class="w-6 h-6 text-glass-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
              </svg>
            </div>
            <h4 class="text-sm font-semibold text-glass-gray-800 mb-2">Schedule a Call</h4>
            <p class="text-xs text-glass-gray-600 mb-4">Choose a time that works for you</p>
            
            <!-- Calendar Widget Placeholder -->
            <div class="bg-glass-white/40 backdrop-blur-sm border border-glass-white/30 rounded-glass-sm p-4 mb-4">
              <div class="grid grid-cols-7 gap-1 text-xs text-glass-gray-600 mb-2">
                <div class="text-center">Mon</div>
                <div class="text-center">Tue</div>
                <div class="text-center">Wed</div>
                <div class="text-center">Thu</div>
                <div class="text-center">Fri</div>
                <div class="text-center">Sat</div>
                <div class="text-center">Sun</div>
              </div>
              <div class="grid grid-cols-7 gap-1">
                <div class="h-6 bg-glass-white/60 rounded flex items-center justify-center text-xs text-glass-gray-600">1</div>
                <div class="h-6 bg-glass-primary rounded flex items-center justify-center text-xs text-glass-white">2</div>
                <div class="h-6 bg-glass-primary rounded flex items-center justify-center text-xs text-glass-white">3</div>
                <div class="h-6 bg-glass-primary rounded flex items-center justify-center text-xs text-glass-white">4</div>
                <div class="h-6 bg-glass-primary rounded flex items-center justify-center text-xs text-glass-white">5</div>
                <div class="h-6 bg-glass-white/60 rounded flex items-center justify-center text-xs text-glass-gray-600">6</div>
                <div class="h-6 bg-glass-white/60 rounded flex items-center justify-center text-xs text-glass-gray-600">7</div>
              </div>
            </div>
            
            <a href="https://calendly.com/francisco-pmm" target="_blank" 
               class="inline-block bg-glass-primary text-glass-white px-4 py-2 rounded-glass-sm text-sm font-semibold hover:bg-glass-primary-dark transition-colors duration-200">
              Open Calendar
            </a>
          </div>
          
          <!-- Contact Info -->
          <div class="space-y-3">
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-glass-primary-lighter rounded-glass-sm flex items-center justify-center">
                <svg class="w-4 h-4 text-glass-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-glass-gray-800">Email</p>
                <p class="text-xs text-glass-gray-600">francisco@pmm.com</p>
              </div>
            </div>
            
            <div class="flex items-center space-x-3">
              <div class="w-8 h-8 bg-glass-primary-lighter rounded-glass-sm flex items-center justify-center">
                <svg class="w-4 h-4 text-glass-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs font-medium text-glass-gray-800">LinkedIn</p>
                <p class="text-xs text-glass-gray-600">linkedin.com/in/francisco-pmm</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
