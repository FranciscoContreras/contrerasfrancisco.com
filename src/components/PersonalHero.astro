<section id="home" class="pt-40 pb-24 px-4 sm:px-6 lg:px-8 transition-colors duration-300">
  <div class="max-w-5xl mx-auto text-center">
    <!-- Personal Greeting with Profile Photo -->
    <div class="flex items-center justify-center gap-4 mb-6">
      <h1 class="text-3xl md:text-4xl font-bold text-glass-gray-800 dark:text-dark-glass-gray-800 leading-tight transition-colors duration-300">
        Hi, I'm Francisco
      </h1>
      <div class="w-12 h-12 md:w-14 md:h-14 rounded-full overflow-hidden shadow-glass ring-2 ring-glass-white/20 dark:ring-dark-glass-white/20">
